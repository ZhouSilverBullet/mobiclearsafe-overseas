<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textColor="@color/black_66"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_app_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_app_icon"
            tools:text="支付宝" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textColor="@color/black_99"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_app_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_app_icon"
            tools:text="试玩两分钟领奖" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="right"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll_canget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:background="@mipmap/act_gold_icon" />

                <TextView
                    android:id="@+id/tv_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.5dp"
                    android:textColor="@color/c_FF9B2B"
                    android:textSize="12dp"
                    tools:text="500金币" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_finished"
                android:textSize="12dp"
                android:visibility="gone"
                android:text="@string/today_finished"
                android:textColor="@color/black_99"
                android:layout_marginRight="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginTop="4.5dp"
                android:background="@mipmap/integral_start_btn_icon"
                android:gravity="center"
                android:text="@string/test_play"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:text="试玩" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
