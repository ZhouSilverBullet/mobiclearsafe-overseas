<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/power_control_top_bg">

    <FrameLayout
        android:layout_width="160.0dip"
        android:layout_height="260.0dip"
        android:layout_gravity="center"
        android:background="@drawable/ic_battery_big"
        android:paddingLeft="22.0dip"
        android:paddingTop="30.0dip"
        android:paddingRight="22.0dip"
        android:paddingBottom="26.0dip">

        <com.mobi.clearsafe.ui.powercontrol.widget.BatteryWaveView
            android:id="@+id/batteryWaveView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <com.mobi.clearsafe.ui.powercontrol.widget.CleanHighPoweredAppView
        android:id="@+id/chaView"
        android:layout_width="160dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <com.mobi.clearsafe.ui.powercontrol.widget.DropFlashView
        android:id="@+id/dfvView"
        android:layout_width="160dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>