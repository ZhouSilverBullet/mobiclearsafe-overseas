<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="331dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_radius15"
        >


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/close_icon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="19dp"
            />



        <ImageView
            android:id="@+id/gold_icon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/gold_gif"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_coinsacce"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gold_icon"
            android:textSize="16sp"
            android:textColor="@color/black_33"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/des"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_numdialog_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:textSize="13sp"
            android:textColor="@color/black_66"
            />



        <TextView
            android:id="@+id/btn_content"
            android:layout_marginLeft="7dp"
            android:layout_width="184dp"
            android:layout_height="52dp"
            android:text="@string/string_continuecoins"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:textColor="@color/white"
            android:background="@mipmap/btn_blue_bg"
            />

    </RelativeLayout>


</RelativeLayout>