<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/clear_orange_shape">


    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="11"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/red_593b3b" />

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GB"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/tvNum"
        app:layout_constraintTop_toTopOf="@id/tvNum"
        tools:textColor="@color/red_593b3b" />

    <View
        android:id="@+id/vScan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/clear_scan_selector"
        app:layout_constraintBottom_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>