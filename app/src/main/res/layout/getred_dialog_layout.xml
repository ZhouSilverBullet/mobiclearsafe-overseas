<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_open_red_pack"
        android:layout_width="328dp"
        android:layout_height="344dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:background="@mipmap/open_red_pack_bg"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_red"
                android:textSize="14dp"
                android:textColor="@color/c_B57940"
                />
            <TextView
                android:id="@id/tv_gold"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000金币"
                android:textSize="28dp"
                android:textColor="@color/c_FF3D00"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_rmb"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约0.3元"
                android:textSize="14dp"
                android:visibility="gone"
                android:textColor="@color/c_B57940"
                />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一元可提现"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/redpack_red_shape"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新人红包"
            android:layout_above="@+id/jump_app"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:visibility="gone"
            android:textColor="@color/c_FFDC04"
            />

        <ImageView
            android:id="@+id/jump_app"
            android:layout_width="209dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_above="@+id/jump_app"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@color/c_EAFF02"
            />

    </RelativeLayout>
</RelativeLayout>