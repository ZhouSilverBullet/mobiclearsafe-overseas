<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="345dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_radius15"
        >


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/close_icon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="19dp"
            />



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜获得收益加速卡"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:textSize="16sp"
            android:textColor="@color/black_33"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/des"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24小时内金币收益×1.2倍"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@color/c_FF3737"
            />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_below="@+id/des"
            android:layout_width="121dp"
            android:layout_height="140dp"
            android:src="@mipmap/exit_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            />



        <TextView
            android:id="@+id/btn_content"
            android:layout_marginLeft="7dp"
            android:layout_width="238dp"
            android:layout_height="45dp"
            android:text="立即使用"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:textColor="@color/white"
            android:background="@drawable/exit_dialog_btn_confirm"
            />

    </RelativeLayout>


</RelativeLayout>