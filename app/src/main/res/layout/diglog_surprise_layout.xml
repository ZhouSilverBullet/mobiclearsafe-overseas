<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:minHeight="236dp">

            <ImageView
                android:id="@+id/bg_light"
                android:layout_width="253dp"
                android:layout_height="253dp"
                android:src="@mipmap/bg_light_sur"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="121dp"
                android:background="@drawable/shape_dialog_bg_gray"
                android:gravity="center_horizontal"
                android:minHeight="157dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/ll_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:background="@mipmap/more_gold_icon"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_gold_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="恭喜获得28金币" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_gold">

                    <TextView
                        android:id="@+id/tv_double"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:background="@drawable/dialog_yellow_btn_bg"
                        android:gravity="center"
                        android:text="@string/gold_double"
                        android:textColor="@color/red_593b3b"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="金币翻倍" />

                    <TextView
                        android:id="@+id/tv_bottom_btn"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/shape_btn_circle"
                        android:gravity="center"
                        android:text="@string/turn_again"
                        android:textColor="@color/yellow"
                        android:textSize="17sp"
                        android:visibility="gone" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/lable"
                    android:layout_width="82dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="35dp"
                    android:src="@mipmap/lable_icon"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/ll_golds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_btns">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ativity_top_title"
                        android:textColor="@color/gray_a7cb"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="："
                        android:textColor="@color/gray_a7cb"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/task_gold_icon" />

                    <TextView
                        android:id="@+id/tv_gold_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/gray_a7cb"
                        android:textSize="14sp"
                        tools:text="1124≈0.55" />
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="138dp"
                android:layout_marginTop="50dp"
                android:background="@mipmap/surprise_top_dialog"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="126dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/dialog_right_top_close_icon"
                    android:visibility="visible"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="128dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_dialog_close_circle"
                android:gravity="center"
                android:textColor="@color/c_C7C7C7"
                android:textSize="16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="3" />

        </android.support.constraint.ConstraintLayout>

        <com.mobi.clearsafe.widget.CircleAroundView
            android:id="@+id/fl_ad"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:minHeight="150dp"
            android:padding="6dp"
            android:visibility="gone"
            />
    </LinearLayout>

</FrameLayout>