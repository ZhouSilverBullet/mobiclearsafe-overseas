<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_open_red_pack"
        android:layout_width="330dp"
        android:layout_height="407dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/red_bg2"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_red"
                android:textSize="14dp"
                android:textColor="@color/c_B57940"
                />
            <TextView
                android:id="@id/tv_gold"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000金币"
                android:textSize="28dp"
                android:textColor="@color/c_FF3D00"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_rmb"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约0.3元"
                android:textSize="14dp"
                android:textColor="@color/c_B57940"
                />
        </LinearLayout>



        <TextView
            android:id="@+id/first_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.2元"
            android:textSize="11dp"
            android:textColor="@color/c_F4291D"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="85dp"
            />
        <LinearLayout
            android:id="@+id/layout_second"
            android:layout_width="85dp"
            android:layout_height="111dp"
            android:background="@mipmap/second_day"
            android:layout_marginTop="144dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/second_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.2元"
                android:textSize="18dp"
                android:textColor="@color/c_F21717"
                android:textStyle="bold"
                android:layout_marginTop="12dp"

                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明日登陆再得3000金币"
            android:layout_above="@+id/jump_app"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/jump_app"
            android:layout_width="209dp"
            android:layout_height="40dp"
            android:src="@mipmap/red_jump"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/jump_gray"
            android:layout_width="209dp"
            android:layout_height="40dp"
            android:background="@mipmap/red_jump_gray"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="进入全民走路(3)"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/c_9E9E9E"
            />
    </RelativeLayout>



</RelativeLayout>