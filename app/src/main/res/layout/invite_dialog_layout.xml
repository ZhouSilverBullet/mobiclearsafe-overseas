<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/miss_white_icon"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            />
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:background="@mipmap/invite_bg1"
            >
            <LinearLayout
                android:id="@+id/tv_2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="66dp"
                >
                <TextView
                    android:id="@+id/get_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="50sp"
                    android:textColor="@color/c_FF4051"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="20sp"
                    android:textColor="@color/c_FF2800"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="待解冻"
                android:layout_toRightOf="@+id/tv_2"
                android:layout_marginTop="66dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/c_FF4051"
                android:background="@drawable/manager_shape4"
                />

            <TextView
                android:id="@+id/tv_conins"
                android:layout_marginTop="225dp"
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_height="27dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/string_manager_tip6"
                android:textSize="14sp"
                android:textColor="@color/c_D62F2F"
                android:background="@drawable/invite_dialog_shape"
                />
            <LinearLayout
                android:layout_marginTop="230dp"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="@color/c_FFBA6D"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/c_FFBA6D"
                        />

                </RelativeLayout>
                <ProgressBar
                    android:layout_marginTop="8dp"
                    android:id="@+id/progress_bar"
                    android:layout_width="252dp"
                    android:layout_height="18dp"
                    android:max="10000"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/invite_dialog_progressbar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:text="@string/string_manager_tip5"
                    />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/invite_btn"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:src="@mipmap/invite_btn2"
            android:layout_marginTop="20dp"
            />




    </LinearLayout>


</LinearLayout>