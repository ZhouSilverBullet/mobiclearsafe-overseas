<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear_orange_shape"
    android:fitsSystemWindows="true"
    tools:context=".main.fragment.HomeFragment">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_FAFAFC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/flTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/vLine"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:background="@drawable/clear_blue_selector"
                        app:layout_constraintTop_toTopOf="parent" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="50dp">

                        <RelativeLayout
                            android:id="@+id/bubble1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="-10dp"
                            android:layout_marginBottom="50dp"
                            android:layout_toLeftOf="@+id/cicle"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/bubble1_text"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@mipmap/float_money_icon"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bubble1_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bubble1_text"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                tools:text="1111" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/bubble3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@+id/cicle"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/bubble3_text"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@mipmap/float_money_icon"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bubble3_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bubble3_text"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                tools:text="1111" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bubble2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/cicle"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/bubble2_text"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@mipmap/float_money_icon"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bubble2_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bubble2_text"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                tools:text="1111" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bubble4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="120dp"
                            android:layout_marginRight="30dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/bubble4_text"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@mipmap/float_money_icon"
                                android:gravity="center"
                                android:text="22"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bubble4_text"
                                android:layout_centerHorizontal="true"
                                android:text="步数兑换"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="206dp"
                        android:layout_height="208dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="71dp"
                        android:background="@drawable/clear_home_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.mobi.clearsafe.widget.NoPaddingTextView
                            android:id="@+id/tvPoint"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:text="100"
                            android:textColor="#ffffffff"
                            app:textSize="59dp" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="很健康"
                            android:textColor="#ffffffff"
                            android:textSize="23sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSkipClear"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/btn_home_clear_selector"
                        android:text="一键优化"
                        android:textColor="@color/c_0062FF"
                        android:textSize="15sp" />

                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="312dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/home_recyclerview_bg"
                    android:padding="14dp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="热门活动"
                android:textColor="#ff999999"
                android:textSize="15sp" />

            <include layout="@layout/home_active_layout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="优化提速"
                android:textColor="#ff999999"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_recyclerview_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <com.mobi.clearsafe.ui.clear.widget.HomeClearItemView
                    android:id="@+id/hcivQQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hcivContent="一键告别卡慢"
                    app:hcivSrc="@drawable/clean_icon_qq"
                    app:hcivTitle="QQ专清" />

                <com.mobi.clearsafe.ui.clear.widget.HomeClearItemView
                    android:id="@+id/hcivBigfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hcivContent="一键告别卡慢"
                    app:hcivSrc="@drawable/clean_icon_bigfile"
                    app:hcivTitle="大文件清理" />


                <com.mobi.clearsafe.ui.clear.widget.HomeClearItemView
                    android:id="@+id/hcivNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hcivContent="一键告别卡慢"
                    app:hcivSrc="@drawable/clean_icon_notice"
                    app:hcivTitle="通知栏清理" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSafeDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:textColor="#ff999999"
                android:textSize="15sp"
                android:visibility="gone"
                tools:text="快清理已守护您7天" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_float"
        android:layout_width="108dp"
        android:layout_height="102dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="90dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_app_name_icon" />

            <TextView
                android:id="@+id/tvRightHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/home_right_tv_hint_bg"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:text="有问题待修复"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/ibRightSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="13dp"
                android:background="@null"
                android:src="@drawable/home_warning_icon"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>