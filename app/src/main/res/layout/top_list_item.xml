<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="110dp"
        android:layout_height="138dp"
        >

        <com.mobi.clearsafe.widget.RoundImageView
            android:id="@+id/image"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@mipmap/default_head_icon"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="51dp"
                android:layout_height="17dp"
                android:text="@string/string_zjd"
                android:background="@drawable/ktx_icon_shape"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="51dp"
                android:layout_height="17dp"
                android:text="@string/string_jq"
                android:layout_marginTop="5dp"
                android:background="@drawable/ktx_icon_shape"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:text="@string/string_num"
            android:textSize="14sp"
            android:textColor="@color/black_33"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_fourtask"
                android:textColor="@color/black_99"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_toRightOf="@+id/tv_state"
                android:id="@+id/red_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_dot_shape"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>